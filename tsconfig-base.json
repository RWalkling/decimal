{
  "compilerOptions": {
    "pretty": true,
    "lib": ["esnext"],
    "target": "esnext",

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,

    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,

    "strict": true,
    "skipLibCheck": true,
    "strictFunctionTypes": false,

    "downlevelIteration": true
  }
}
